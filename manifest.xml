<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
    xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
    xsi:type="TaskPaneApp">
    <Id>775091b3-e24a-4cf4-a65b-26976fda4f3c</Id>
    <Version>1.0.0.0</Version>
    <ProviderName>XFour IT Limited</ProviderName>
    <DefaultLocale>en-GB</DefaultLocale>
    <DisplayName DefaultValue="Begone Tags" />
    <Description DefaultValue="This add-in parses and sanitises a document removing any HTML tags and leaving behind the content inside paragraph tags." />
    <IconUrl DefaultValue="https://begonetabs.z33.web.core.windows.net/assets/icon-32.png" />
    <HighResolutionIconUrl DefaultValue="https://begonetabs.z33.web.core.windows.net/assets/icon-64.png" />
    <SupportUrl
        DefaultValue="https://support.xfour.co.uk" />
    <AppDomains>
        <AppDomain>https://begonetabs.z33.web.core.windows.net</AppDomain>
    </AppDomains>
    <Hosts>
        <Host Name="Workbook" />
    </Hosts>
    <DefaultSettings>
        <SourceLocation DefaultValue="https://begonetabs.z33.web.core.windows.net/taskpane.html" />
    </DefaultSettings>
    <Permissions>ReadWriteDocument</Permissions>
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
        xsi:type="VersionOverridesV1_0">
        <Hosts>
            <Host xsi:type="Workbook">
                <DesktopFormFactor>
                    <GetStarted>
                        <Title resid="GetStarted.Title" />
                        <Description resid="GetStarted.Description" />
                        <LearnMoreUrl resid="GetStarted.LearnMoreUrl" />
                    </GetStarted>
                    <FunctionFile resid="Commands.Url" />
                    <ExtensionPoint xsi:type="PrimaryCommandSurface">
                        <OfficeTab id="TabHome">
                            <Group id="RemoveTagsGroup">
                                <Label resid="RemoveTagsGroup.Label" />
                                <Icon>
                                    <bt:Image size="16" resid="Icon.16x16" />
                                    <bt:Image size="32" resid="Icon.32x32" />
                                    <bt:Image size="80" resid="Icon.80x80" />
                                </Icon>
                                <Control xsi:type="Menu" id="RemoveTagsMenu">
                                    <Label resid="RemoveTagsMenu.Label" />
                                    <Supertip>
                                        <Title resid="RemoveTagsMenu.Label" />
                                        <Description resid="RemoveTagsMenu.Tooltip" />
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="Icon.16x16" />
                                        <bt:Image size="32" resid="Icon.32x32" />
                                        <bt:Image size="80" resid="Icon.80x80" />
                                    </Icon>
                                    <Items>
                                        <Item id="RemoveTagsMenu.RemoveAll">
                                            <Label resid="RemoveTags.RemoveAll.Label" />
                                            <Supertip>
                                                <Title resid="RemoveTags.RemoveAll.Label" />
                                                <Description resid="RemoveTags.RemoveAll.Tooltip" />
                                            </Supertip>
                                            <Icon>
                                                <bt:Image size="16" resid="Icon.16x16" />
                                                <bt:Image size="32" resid="Icon.32x32" />
                                                <bt:Image size="80" resid="Icon.80x80" />
                                            </Icon>
                                            <Action xsi:type="ExecuteFunction">
                                                <FunctionName>removeTagsFromWorkbook</FunctionName>
                                            </Action>
                                        </Item>
                                        <Item id="RemoveTagsMenu.FromWorksheet">
                                            <Label resid="RemoveTags.FromWorksheet.Label" />
                                            <Supertip>
                                                <Title resid="RemoveTags.FromWorksheet.Label" />
                                                <Description
                                                    resid="RemoveTags.FromWorksheet.Tooltip" />
                                            </Supertip>
                                            <Icon>
                                                <bt:Image size="16" resid="Icon.16x16" />
                                                <bt:Image size="32" resid="Icon.32x32" />
                                                <bt:Image size="80" resid="Icon.80x80" />
                                            </Icon>
                                            <Action xsi:type="ExecuteFunction">
                                                <FunctionName>removeTagsFromWorksheet</FunctionName>
                                            </Action>
                                        </Item>
                                        <Item id="RemoveTagsMenu.FromSelection">
                                            <Label resid="RemoveTags.FromSelection.Label" />
                                            <Supertip>
                                                <Title resid="RemoveTags.FromSelection.Label" />
                                                <Description
                                                    resid="RemoveTags.FromSelection.Tooltip" />
                                            </Supertip>
                                            <Icon>
                                                <bt:Image size="16" resid="Icon.16x16" />
                                                <bt:Image size="32" resid="Icon.32x32" />
                                                <bt:Image size="80" resid="Icon.80x80" />
                                            </Icon>
                                            <Action xsi:type="ExecuteFunction">
                                                <FunctionName>removeTagsFromSelection</FunctionName>
                                            </Action>
                                        </Item>
                                    </Items>
                                </Control>
                            </Group>
                        </OfficeTab>
                    </ExtensionPoint>
                </DesktopFormFactor>
            </Host>
        </Hosts>
        <Resources>
            <bt:Images>
                <bt:Image id="Icon.16x16" DefaultValue="https://begonetabs.z33.web.core.windows.net/assets/icon-16.png" />
                <bt:Image id="Icon.32x32" DefaultValue="https://begonetabs.z33.web.core.windows.net/assets/icon-32.png" />
                <bt:Image id="Icon.80x80" DefaultValue="https://begonetabs.z33.web.core.windows.net/assets/icon-80.png" />
            </bt:Images>
            <bt:Urls>
                <bt:Url id="GetStarted.LearnMoreUrl"
                    DefaultValue="https://xfour.atlassian.net/servicedesk/customer/kb/view/17530882?source=shareable-url" />
                <bt:Url id="Taskpane.Url" DefaultValue="https://begonetabs.z33.web.core.windows.net/taskpane.html" />
                <bt:Url id="Commands.Url" DefaultValue="https://begonetabs.z33.web.core.windows.net/commands.html" />
            </bt:Urls>
            <bt:ShortStrings>
                <bt:String id="GetStarted.Title" DefaultValue="Get started with Tag Remover" />
                <bt:String id="RemoveTagsGroup.Label" DefaultValue="Tag Remover" />
                <bt:String id="RemoveTagsMenu.Label" DefaultValue="Remove Tags" />
                <bt:String id="RemoveTags.RemoveAll.Label" DefaultValue="Remove All Tags" />
                <bt:String id="RemoveTags.FromWorksheet.Label" DefaultValue="...from Worksheet" />
                <bt:String id="RemoveTags.FromSelection.Label" DefaultValue="...from Selection" />
            </bt:ShortStrings>
            <bt:LongStrings>
                <bt:String id="GetStarted.Description" DefaultValue="Choose to remove tags from the whole workbook, the open worksheet or your selection." />
                <bt:String id="RemoveTagsMenu.Tooltip" DefaultValue="Remove tags from the document" />
                <bt:String id="RemoveTags.RemoveAll.Tooltip" DefaultValue="Remove all tags from the document" />
                <bt:String id="RemoveTags.FromWorksheet.Tooltip" DefaultValue="Remove tags from the current worksheet" />
                <bt:String id="RemoveTags.FromSelection.Tooltip" DefaultValue="Remove tags from the current selection" />
            </bt:LongStrings>
        </Resources>
    </VersionOverrides>
</OfficeApp>